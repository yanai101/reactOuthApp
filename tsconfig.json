{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "jsx": "react",
    "noImplicitAny": true,
    "target": "es5",
    "module": "es6",
    "lib": ["es2015", "es2017", "dom"],
    "moduleResolution": "node"
  },
  "files": [
    "./config/typescript.config.d.ts"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"],
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "my-tsconfig.json"
      }
    }
  }
}